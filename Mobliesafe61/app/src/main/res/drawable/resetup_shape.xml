<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" 
    android:shape="rectangle"
    >
    <!-- rectangle  矩形    	oval 椭圆		line 线  		ring  环形-->
    <!-- corners 角度 -->
    <corners android:radius="10dp"/>
    <!-- solid  颜色 -->
    <solid android:color="#ff0000"/>
    <!-- stroke  边框 	dashWidth 控制点的大小	dashGap 点的距离
    <stroke android:color="#00ff00" android:width="5dp" android:dashWidth="5dp" android:dashGap="50dp"/>
    -->
    <!-- gradient 渐变色 -->
    <gradient android:startColor="#ff0000" android:centerColor="#00ff00" android:endColor="#0000ff"/>

</shape>