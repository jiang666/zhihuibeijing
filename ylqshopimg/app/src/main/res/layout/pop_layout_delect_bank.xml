<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_translate"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/shape_15_conrner_solid_ffffff"
        android:layout_centerInParent="true"
        android:layout_width="270dp"
        android:orientation="vertical"
        android:layout_height="@dimen/_180dp">

        <TextView
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_16dp"
            android:textStyle="bold"
            android:gravity="center_horizontal|bottom"
            android:text="提示"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_14dp"
                android:gravity="center_horizontal"
                android:text="当前银行卡为默认银行卡不可删除，"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_14dp"
                android:gravity="center_horizontal"
                android:text="请先将一张其他银行卡设为默认，通 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_14dp"
                android:gravity="center_horizontal"
                android:text="过验证后可以删除当前银行卡。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_ok"
                android:textColor="@color/color_ffa531"
                android:textSize="@dimen/_16dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="我知道了"
                android:layout_height="45dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>