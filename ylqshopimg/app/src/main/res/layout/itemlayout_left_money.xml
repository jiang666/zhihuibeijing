<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="119dp">

        <TextView
            android:id="@+id/tv_title_data"
            android:text=""
            android:textSize="@dimen/_13dp"
            android:textColor="@color/color_333333"
            android:paddingLeft="@dimen/_20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="53.5dp" />

        <!--积分收入 积分支出-->
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingRight="@dimen/_20dp"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:text="积分收入"
                    android:textSize="@dimen/_13dp"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_get_jf"
                    android:text=""
                    android:layout_marginTop="@dimen/_11dp"
                    android:textSize="@dimen/_13dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_ffa531"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            
            <TextView
                android:layout_gravity="center_vertical"
                android:background="@color/color_999999"
                android:layout_width="0.5dp"
                android:layout_height="@dimen/_25dp"
                tools:ignore="Suspicious0dp" />

            <LinearLayout
                android:paddingLeft="@dimen/_20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:text="积分支出"
                    android:textSize="@dimen/_13dp"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_jf_out"
                    android:text=""
                    android:layout_marginTop="@dimen/_11dp"
                    android:textSize="@dimen/_13dp"
                    android:textStyle="bold"
                    android:textColor="@color/color_ffa531"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/rv_data"
        android:background="@color/white"
        android:layout_below="@+id/rl_title"
        android:layout_height="wrap_content"/>

</RelativeLayout>