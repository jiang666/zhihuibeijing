<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical"
    tools:context=".ui.act.getmoney.GetMoneyHomeActivity">

    <RelativeLayout
        android:id="@+id/back_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/_50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_black_back"
                android:layout_width="@dimen/_10dp"
                android:layout_height="@dimen/_19dp" />
        </RelativeLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:text="收款账户"
            android:textStyle="bold"
            android:textColor="@color/color_010101"
            android:textSize="16.5dp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <!--余额-->
    <LinearLayout
        android:gravity="center"
        android:background="@color/color_ffa531"
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/white"
            android:textSize="14.5dp"
            android:text="余额（积分）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_can_tx_money"
            android:layout_marginTop="@dimen/_20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="27.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--提现-->
    <RelativeLayout
        android:id="@+id/rl_tx"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60dp">
        
        <ImageView
            android:id="@+id/img_tx"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_tx"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp" />

        <TextView
            android:textColor="@color/color_333333"
            android:textSize="@dimen/_16dp"
            android:text="提现"
            android:layout_marginLeft="12.5dp"
            android:layout_toRightOf="@+id/img_tx"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/tl_tx_more"
            android:layout_width="@dimen/_50dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_graw_more"
                android:layout_width="@dimen/_8dp"
                android:layout_height="@dimen/_15dp" />
        </RelativeLayout>


    </RelativeLayout>

    <!--提现记录    余额明细-->
    <LinearLayout
        android:layout_marginTop="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="120.5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_tx_de"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp">

            <ImageView
                android:id="@+id/img_tx_de"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_tx_de"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp" />

            <TextView
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_16dp"
                android:text="提现记录"
                android:layout_marginLeft="12.5dp"
                android:layout_toRightOf="@+id/img_tx_de"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/tl_tx_de_more"
                android:layout_width="@dimen/_50dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_graw_more"
                    android:layout_width="@dimen/_8dp"
                    android:layout_height="@dimen/_15dp" />
            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <RelativeLayout
            android:id="@+id/rl_left_money"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp">

            <ImageView
                android:id="@+id/img_left_money"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_left_money"
                android:layout_width="@dimen/_40dp"
                android:layout_height="@dimen/_40dp" />

            <TextView
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_16dp"
                android:text="余额明细"
                android:layout_marginLeft="12.5dp"
                android:layout_toRightOf="@+id/img_left_money"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/tl_leftmoney_more"
                android:layout_width="@dimen/_50dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_graw_more"
                    android:layout_width="@dimen/_8dp"
                    android:layout_height="@dimen/_15dp" />
            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>