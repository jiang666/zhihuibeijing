<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_container"
    android:layout_height="@dimen/_103dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_f7f7f7"
        android:layout_height="43dp">

        <TextView
            android:id="@+id/tv_title_time"
            android:layout_marginLeft="@dimen/_20dp"
            android:gravity="center_vertical"
            android:textSize="13.5dp"
            android:text=""
            android:textColor="@color/color_666666"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_title_tx_jf"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="13dp"
            android:text=""
            android:textColor="@color/color_666666"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/_60dp">

        <ImageView
            android:layout_width="43dp"
            android:id="@+id/img_type"
            android:layout_marginLeft="@dimen/_17dp"
            android:layout_centerVertical="true"
            android:layout_height="39dp" />

        <TextView
            android:id="@+id/tv_type"
            android:text=""
            android:layout_toRightOf="@+id/img_type"
            android:layout_marginLeft="12.5dp"
            android:textColor="@color/color_333333"
            android:textSize="16.5dp"
            android:layout_marginTop="@dimen/_8dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_9dp"
            android:text=""
            android:layout_toRightOf="@+id/img_type"
            android:layout_marginLeft="12.5dp"
            android:textColor="@color/color_333333"
            android:textSize="11dp"
            android:layout_marginTop="@dimen/_11dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_status"
            android:text=""
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginRight="20dp"
            android:textSize="13.5dp"
            android:textColor="@color/color_ffa531"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_9dp"
            android:text=""
            android:layout_marginLeft="12.5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20dp"
            android:textColor="@color/color_333333"
            android:textSize="15dp"
            android:layout_marginTop="@dimen/_11dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>