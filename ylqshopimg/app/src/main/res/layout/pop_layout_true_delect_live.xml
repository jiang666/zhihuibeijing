<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_translate"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/shape_15_conrner_solid_ffffff"
        android:layout_centerInParent="true"
        android:layout_width="270dp"
        android:orientation="vertical"
        android:layout_height="150dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="104.5dp">

            <TextView
                android:text="提示"
                android:textColor="@color/color_333333"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_16dp"
                android:gravity="center_horizontal"
                android:text="是否要解除该直播间？"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_cancel"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_16dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="取消"
                android:layout_height="45dp" />

            <TextView
                android:background="@color/color_eeeeee"
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_ok"
                android:textColor="@color/color_ffa531"
                android:textSize="@dimen/_16dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="确认解除"
                android:layout_height="45dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>