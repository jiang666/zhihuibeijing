<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:lee="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_year"
        android:text="2020年"
        android:textSize="14.5dp"
        android:textColor="@color/color_333333"
        android:paddingTop="11.5dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp" />

    <TextView
        android:layout_below="@+id/tv_year"
        android:id="@+id/tv_month"
        android:text="3月"
        android:gravity="center_horizontal"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/_20dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <com.example.ylqshop.view.DataViewGroup
        android:layout_below="@+id/tv_month"
        android:id="@+id/dataviewgroup"
        lee:childHorizontalSpace="0dp"
        lee:childVerticalSpace="0dp"
        lee:columnNum="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>