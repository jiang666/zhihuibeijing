<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ui.act.bandlive.HowGetCodeActivity">

    <RelativeLayout
        android:id="@+id/back_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/_50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_black_back"
                android:layout_width="@dimen/_10dp"
                android:layout_height="@dimen/_19dp" />
        </RelativeLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:text="如何获取鱼络号"
            android:textStyle="bold"
            android:textColor="@color/color_010101"
            android:textSize="16.5dp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_0dp"
        android:background="@color/color_f7f7f7"
        android:scrollbars="none"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_20dp"
                android:textSize="14.5dp"
                android:textColor="@color/color_333333"
                android:text="第一步：点击进入个人主页（如下图所示）"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_49dp" />

            <ImageView
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/img_help1"
                android:layout_width="199dp"
                android:layout_height="431.5dp" />

            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_20dp"
                android:textSize="14.5dp"
                android:textColor="@color/color_333333"
                android:text="第二步： 在头像下查看鱼络号 "
                android:layout_width="match_parent"
                android:layout_height="@dimen/_49dp" />

            <ImageView
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/img_help2"
                android:layout_width="214.5dp"
                android:layout_height="245.45dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>