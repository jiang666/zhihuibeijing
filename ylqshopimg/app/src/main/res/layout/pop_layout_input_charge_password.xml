<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="320dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/shape_10_conrner_solid_ffffff"
            android:clickable="true">

            <RelativeLayout
                android:id="@+id/rl_close"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"
                    android:layout_margin="18.5dp"
                    android:src="@drawable/img_close_graw" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="请核对银行卡号"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_above="@+id/tv_true"
                android:layout_marginLeft="@dimen/_17dp"
                android:layout_marginRight="@dimen/_17dp"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal">

                <!--最左侧-->
                <TextView
                    android:id="@+id/tv_left"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colo_line_stroke" />

                <!--最右侧-->
                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/colo_line_stroke" />
                
                <!--顶部所有的横线-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp">

                    <TextView
                        android:id="@+id/tv_topline1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_topline2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_topline3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_topline4"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_topline5"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colo_line_stroke" />

                </LinearLayout>

                <!--底部所有的横线-->
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp">

                    <TextView
                        android:id="@+id/tv_bottomline1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_bottomline2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_bottomline3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_bottomline4"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_bottomline5"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colo_line_stroke" />

                </LinearLayout>

                <!--输入框-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30dp"
                    android:layout_margin="0.5dp"
                    android:background="@color/color_F7F7F7">

                    <TextView
                        android:id="@+id/tv_input1"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLength="4"
                        android:textSize="@dimen/_13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_center1"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_input2"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLength="4"
                        android:gravity="center"
                        android:textSize="@dimen/_13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_center2"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_input3"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLength="4"
                        android:gravity="center"
                        android:textSize="@dimen/_13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_center3"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_input4"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLength="4"
                        android:gravity="center"
                        android:textSize="@dimen/_13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_center4"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/colo_line_stroke" />

                    <TextView
                        android:id="@+id/tv_input5"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLength="4"
                        android:gravity="center"
                        android:textSize="@dimen/_13dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_true"
                android:layout_width="230dp"
                android:layout_height="@dimen/_44dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_15dp"
                android:background="@drawable/shape_2_conrner_solid_ffa531"
                android:gravity="center"
                android:text="确认无误"
                android:textColor="@color/white"
                android:textSize="@dimen/_17dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_number"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_F7F7F7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num1"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_F7F7F7" />

            <TextView
                android:id="@+id/tv_num2"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_F7F7F7" />

            <TextView
                android:id="@+id/tv_num3"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_F7F7F7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num4"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_F7F7F7" />

            <TextView
                android:id="@+id/tv_num5"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_F7F7F7" />

            <TextView
                android:id="@+id/tv_num6"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_F7F7F7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_num7"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_F7F7F7" />

            <TextView
                android:id="@+id/tv_num8"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_F7F7F7" />

            <TextView
                android:id="@+id/tv_num9"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_F7F7F7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_F7F7F7"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_F7F7F7" />

            <TextView
                android:id="@+id/tv_num0"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/colo_333333"
                android:textSize="@dimen/_19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/color_F7F7F7" />

            <RelativeLayout
                android:id="@+id/rl_delect"
                android:layout_width="@dimen/_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_F7F7F7">

                <ImageView
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_17dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_input_password_close" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
