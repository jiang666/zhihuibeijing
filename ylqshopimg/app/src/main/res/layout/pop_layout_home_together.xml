<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_translate"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/shape_15_conrner_solid_ffffff"
        android:layout_centerInParent="true"
        android:layout_width="270dp"
        android:orientation="vertical"
        android:layout_height="@dimen/_140dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="94.5dp">

            <TextView
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_14dp"
                android:gravity="center_horizontal"
                android:text="您还没有完成资质认证,认证成功后"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_14dp"
                android:layout_marginTop="@dimen/_2dp"
                android:gravity="center_horizontal"
                android:text="才可以使用该功能哦。"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        
        <TextView
            android:background="@color/color_eeeeee"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            
            <TextView
                android:id="@+id/tv_cancel"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/_16dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="取消"
                android:layout_height="match_parent" />

            <TextView
                android:background="@color/color_eeeeee"
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_ok"
                android:textColor="@color/color_ffa531"
                android:textSize="@dimen/_16dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="去认证"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>