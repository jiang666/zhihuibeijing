<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/white</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/black</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">#ff5686</item>
    </style>

    <!--首页主题背景-->
    <style name="Theme.start" parent="AppTheme">
        <item name="android:windowBackground">@drawable/img_splash_bg</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

    <!--开播主题背景-->
    <style name="Theme.translatebar" parent="AppTheme">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

    <!--吃喝玩乐-->
    <style name="AppTheme.Immersive"  tools:ignore="ResourceCycle">
        <!--透明导航栏-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="NoTitleTranslucent80Theme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
<!--        <item name="android:windowBackground">@color/translate</item>-->
        <item name="android:windowIsTranslucent">true</item>
<!--        <item name="android:windowAnimationStyle">@style/dialog_animation</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--透明导航栏-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

</resources>
