<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_height="30dp">

    <LinearLayout
        android:id="@+id/ll_gg_bg"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_enter_room_bg"
        android:orientation="horizontal"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.example.mylibrary.httpUtils.view.CircleImageView
            android:id="@+id/circle_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:civ_border_color="#F2AD33"
            app:civ_border_width="1dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_user_dj"
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp" />

        <TextView
            android:id="@+id/tv_gg_type"
            android:duplicateParentState="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/colo_FFFFFF"
            android:textSize="13.5dp" />
    </LinearLayout>

</LinearLayout>
