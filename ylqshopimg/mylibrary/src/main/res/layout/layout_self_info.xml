<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/rl_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#03000000"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="25dp"
            android:id="@+id/ll_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_camera_pop"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--踢人-->
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_t_left"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:text="踢人禁言"
                    android:textColor="#999999"
                    android:textSize="13.5dp" />

                <!--举报-->
                <TextView
                    android:id="@+id/tv_jb"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:text="举报拉黑"
                    android:textColor="#999999"
                    android:textSize="13.5dp" />
            </RelativeLayout>

            <!--等级 名字-->
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="53dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:maxWidth="110dp"
                    android:textColor="#333333"
                    android:textSize="14.5dp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/img_sex"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/img_rect_boy" />

                <ImageView
                    android:visibility="gone"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img_user_dj"
                    android:scaleType="fitXY"
                    android:layout_width="30dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/img_host_dj"
                    android:scaleType="fitXY"
                    android:layout_width="30dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="5dp"/>


            </LinearLayout>

            <!--粉丝 号码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fans_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="粉丝0"
                    android:textColor="#666666"
                    android:textSize="11.5dp" />

                <TextView
                    android:id="@+id/tv_ylh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14.5dp"
                    android:gravity="center_vertical"
                    android:text="鱼络号：0"
                    android:textColor="#666666"
                    android:textSize="11.5dp" />

                <ImageView
                    android:id="@+id/img_address"
                    android:visibility="gone"
                    android:layout_width="9dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/img_graw_address" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textColor="#666666"
                    android:textSize="11.5dp" />


            </LinearLayout>

            <!--文字-->
            <TextView
                android:id="@+id/tv_des"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="Ta很懒，什么都没有留下" />

            <!--财产-->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="鱼钻"
                        android:textColor="#666666"
                        android:textSize="11.5dp" />

                    <TextView
                        android:id="@+id/tv_yz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="#333333" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="鱼币"
                        android:textColor="#666666"
                        android:textSize="11.5dp" />

                    <TextView
                        android:id="@+id/tv_yb"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="#333333" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="钻石"
                        android:textColor="#666666"
                        android:textSize="11.5dp" />

                    <TextView
                        android:id="@+id/tv_zs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="#333333" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="积分"
                        android:textColor="#666666"
                        android:textSize="11.5dp" />

                    <TextView
                        android:id="@+id/tv_jf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="#333333" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_line"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#EEEEEE" />

            <LinearLayout
                android:id="@+id/ll_bottom_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_ff5686_15corner"
                    android:gravity="center"
                    android:text="+关注"
                    android:textColor="@color/colo_FFFFFF"
                    android:textSize="13.5dp" />

                <TextView
                    android:id="@+id/tv_tx_who"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/shape_666666_15corner"
                    android:gravity="center"
                    android:text="&#064;TA"
                    android:textColor="#666666"
                    android:textSize="13.5dp" />

                <TextView
                    android:id="@+id/tv_sl"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/shape_666666_15corner"
                    android:gravity="center"
                    android:text="私聊"
                    android:textColor="#666666"
                    android:textSize="13.5dp" />

                <TextView
                    android:id="@+id/tv_gift"
                    android:layout_width="wrap_content"
                    android:minWidth="60dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/shape_666666_15corner"
                    android:gravity="center"
                    android:text="送礼"
                    android:textColor="#666666"
                    android:textSize="13.5dp" />
            </LinearLayout>
        </LinearLayout>

        <com.example.mylibrary.httpUtils.view.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="4dp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

</LinearLayout>
