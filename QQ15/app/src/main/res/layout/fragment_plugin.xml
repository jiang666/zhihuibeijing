<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
              android:orientation="vertical"
             android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/avater_size"
        android:layout_height="@dimen/avater_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@mipmap/avatar3"
        />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/logout_btn_selector"
        android:text="退(iiTTTiii)出"
        android:textColor="#ffffff"
        android:textSize="@dimen/login_text_size"/>

    <CalendarView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></CalendarView>


</LinearLayout>
